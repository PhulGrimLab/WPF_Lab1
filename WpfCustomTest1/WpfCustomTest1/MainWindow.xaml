<Window x:Class="WpfCustomTest1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCustomTest1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <local:RoundButton Content="기본 둥근 버튼" 
                               Width="200" Height="40" 
                               Margin="0,10"/>

            <local:RoundButton Content="모서리가 더 둥근 버튼" 
                               CornerRadius="20,20,20,20" 
                               Width="200" Height="40" 
                               Margin="0,10"/>

            <local:RoundButton Content="모서리가 매우 둥근 버튼" 
                               CornerRadius="40,40,40,40" 
                               Width="200" Height="40" 
                               Background="LightGreen"
                               Margin="0,10"/>

            <local:RoundButton Content="일반 버튼처럼 보이는 버튼" 
                               CornerRadius="0,0,0,0" 
                               Width="200" Height="40" 
                               Background="LightCoral"
                               Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
