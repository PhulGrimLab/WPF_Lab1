<Window x:Class="AsyncAwaitTest1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncAwaitTest1"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <StackPanel Margin="10">
        <!-- 진행 상황을 표시하는 ProgressBar -->
        <ProgressBar x:Name="progressBar" Height="25" Minimum="0" Maximum="100" />

        <!-- 진행율을 텍스트로 표시 -->
        <Label x:Name="progressLabel" Content="Progress: 0%" HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <!-- 작업 시작 버튼 -->
        <Button x:Name="startButton" Content="Start" Click="StartButton_Click" Margin="0,10,0,0" Height="30" Width="80" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
